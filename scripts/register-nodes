#!/bin/bash
set -eu

CPU=$1
MEM=$2
DISK=$3
NODES=$4

if [ -z "$NODES" ]; then
  NODES=$(echo $MACS | wc -w)
fi

count=0
for MAC in $MACS; do
    nova baremetal-node-create ubuntu 1 512 10 $MAC
    sleep 5
    count=$((count + 1))
    if [ $NODES -eq $count ]; then 
        break
    fi
done
date
echo "Nodes will be available in 60 seconds from now."
